<div id="main-page">
    {{>sidebar}}
    <div id="main-content">
        <div id="tag-description">
            <h1>Explore <span class="highlight">#tags</span></h1>
        </div>
        <div id="tag-list">
            {{#each tags}}
                <a href="/tag/{{this._id}}" class="tag-container">
                    <p class="tag-name">#{{this._id}}</p>
                    {{#if (eq this.count 1)}}
                        <p class="tag-count">{{this.count}} post </p>
                    {{else}}
                        <p class="tag-count">{{this.count}} posts</p>
                    {{/if}}
                </a>
            {{/each}}
        </div>
    </div>
</div>