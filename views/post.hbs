<div id="main-page">
    {{>sidebar}}
    <div id="main-content">
        <div id="post-container">
            <div id="back-button" onclick="history.back()">
                <img class="button-svg" id="back-icon" src="/svg/chevron-left-svgrepo-com.svg">
            </div>

            <ul id="post-tags"></ul>

            <a id="post-creator-link" href="/user/{{ postCreator }}">
                <p id="post-creator">@{{ postCreator }}</p>
            </a>
            <p id="post-date">{{ formatDate datePosted 'MMMM Do YYYY, h:mm:ss a' }}</p>

            <h1 id="post-header">{{ post.title }}</h1>


            <p id="post-content">{{ post.content }}</p>

            <div class="post-controls-container">
                <div class="post-votes">{{ post.votes }} votes</div>

                <div class="post-controls">
                    <div class="upvote-button">
                        <img class="post-icon upvote-icon button-svg" src="/svg/chevron-up-svgrepo-com.svg">
                        <p class="upvote-label">upvote</p>
                    </div>

                    <div class="downvote-button">
                        <img class="post-icon downvote-icon button-svg" src="/svg/chevron-down-svgrepo-com.svg">
                        <p class="downvote-label">downvote</p>
                    </div>
                </div>
            </div>
        </div>
        <div id="comments-section">
            <h2 id="comments-header">Comments</h2>
            <div id="comment-creator">
                <input type="text" id="comment-box" placeholder="say something about the post"></input>
                <button id="comment-send">Send</button>
            </div>
        </div>
    </div>
</div>