<div class="post">
    <div class="post-info-controls">
        <hgroup class="post-info">
            <ul class="post-tags">
                {{#tags}}
                    <a href="/tag/{{this}}">
                        <li>#{{this}}</li>
                    </a>
                {{/tags}}
            </ul>
            <div class="post-user-container">
                <div class="post-user-icon" style="background-image: url('{{ postCreator.profileImg }}');"></div>
                <a class="post-user" href="/user/{{ postCreator.username }}">@{{ postCreator.username }}</a>
            </div>
            <p class="post-date">{{ formatDate createdAt 'MMMM Do YYYY, h:mm a' }}</p>
            <a class="post-link" href="/post/{{ _id }}">
                <h3 class="post-title">{{ title }}</h3>
            </a>
            <p class="post-description">{{ content }}</p>
        </hgroup>
        <div class="post-controls-container">
            <div class="post-votes">
                <p class="vote-counter">{{ votes }} votes</p>
            </div>
            <div class="post-controls">
                <form action="/post/{{ _id }}/upvote" method="POST" class="post-control-form">
                    <button class="post-control-button upvote-button">
                        <img class="post-icon upvote-icon button-svg" src="/svg/arrow-up.svg">
                    </button>
                </form>
                <form action="/post/{{ _id }}/downvote" method="POST" class="post-control-form">
                    <button class="post-control-button downvote-button">
                        <img class="post-icon downvote-icon button-svg" src="/svg/arrow-down.svg">
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>