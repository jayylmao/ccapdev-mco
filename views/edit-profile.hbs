<div id="hidden-modal" class="modal">
    <div class="modal-container">
        <div class="btnClose-section">
            <button class="btnClose">&#10005;</button>
        </div>

        <form action="edit-profile/{{user._id}}" method="post">

            <input type="hidden" name="_method" value="PUT"> <!-- hidden -->

            <div class="overall-image-section">
                <div class="image-section">
                    <label for="profileImage">Choose your profile image:</label>
                    <input class="chosenProfileFile" type="file">
                    <img class="chosenProfileImage" src="{{user.profileImg}}">
                </div>

                <div class="image-section">    
                    <label for="backgroundImage">Choose your background image:</label>
                    <input class="chosenBackgroundFile" type="file">
                    <img class="chosenBackgroundImage" src="{{user.backgroundImg}}">
                </div>
            </div>


            <div class="overall-form-section">
                <div>
                    <div class="input-section">
                        <label>Username:</label>
                        <input class="username" type="text" value="{{user.username}}">
                    </div>

                    <div class="input-section">
                        <label>First Name:</label>
                        <input class="fName" type="text" value="{{user.fName}}">
                    </div>
                </div>

                <div>
                    <div class="input-section">
                        <label>Last Name:</label>
                        <input class="lName" type="text" value="{{user.lName}}">
                    </div>

                    <div class="input-section input-textarea">
                        <label>Description:</label>
                        <textarea class="description" value="{{user.description}}"></textarea>
                    </div>
                </div>
            </div>


            <div class="btnSave-section">
                <button type="submit" class="btnSave">Save</button>
            </div>

        </form>

    </div>
</div>