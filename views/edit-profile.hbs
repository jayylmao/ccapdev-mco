<div id="main-page">
    {{>sidebar}}
    <div id="main-content">
        <div id="back-button" onclick="history.back()">
            <img class="button-svg" id="back-icon" src="/svg/arrow-left.svg">
        </div>
        <h1 id="title">Edit your profile</h1>

        <!-- process the methodOverride before the multer (or else method=post not put), use a query parameter for _method -->
        <form action="/edit-profile/?_method=PUT" method="post" enctype="multipart/form-data">

            <input type="hidden" name="_method" value="PUT"> <!-- hidden -->

            <div class="overall-image-section">
                <div class="image-section">
                    <label for="profileImage">Profile image</label>
                    <input class="chosenProfileFile" type="file" name="profileImg">
                    <img class="chosenProfileImage" src="{{loggedUser.profileImg}}">
                </div>

                <div class="image-section">
                    <label for="backgroundImage">Banner image</label>
                    <input class="chosenBackgroundFile" type="file" name="backgroundImg">
                    <img class="chosenBackgroundImage" src="{{loggedUser.backgroundImg}}">
                </div>
            </div>


            <div class="overall-form-section">
                <div>
                    <div class="input-section">
                        <label>Username</label>
                        <input class="username" type="text" name="username" value="{{loggedUser.username}}">
                    </div>

                    <div class="input-section">
                        <label>First Name</label>
                        <input class="fName" type="text" name="fName" value="{{loggedUser.fName}}">
                    </div>
                </div>

                <div>
                    <div class="input-section">
                        <label>Last Name</label>
                        <input class="lName" type="text" name="lName" value="{{loggedUser.lName}}">
                    </div>

                    <div class="input-section input-textarea">
                        <label>Description</label>
                        <textarea class="description" name="description">{{loggedUser.description}}</textarea>
                    </div>
                </div>
            </div>


            <div class="edit-controls">
                <button type="submit" class="submit-button">Submit</button>
                <div class="cancel-button" onclick="history.back()">Cancel</div>
            </div>
            
        </form>

        <a href="/account/deleteUser" ><button id="delete">Delete Account</button></a>
        
    </div>
</div>