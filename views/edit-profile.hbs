<div id="hidden-modal" class="modal">
    <div class="modal-container">
        <div class="btnClose-section">
            <a href="/user/{{user.username}}">
                <button class="btnClose">&#10005;</button>
            </a>
        </div>

        <!-- process the methodOverride before the multer (or else method=post not put), use a query parameter for _method -->
        <form action="/user/edit-profile/{{user.username}}?_method=PUT" method="post" enctype="multipart/form-data">

            <input type="hidden" name="_method" value="PUT"> <!-- hidden -->

            <div class="overall-image-section">
                <div class="image-section">
                    <label for="profileImage">Choose your profile image:</label>
                    <input class="chosenProfileFile" type="file" name="profileImg">
                    <img class="chosenProfileImage" src="{{user.profileImg}}">
                </div>

                <div class="image-section">    
                    <label for="backgroundImage">Choose your background image:</label>
                    <input class="chosenBackgroundFile" type="file" name="backgroundImg">
                    <img class="chosenBackgroundImage" src="{{user.backgroundImg}}">
                </div>
            </div>


            <div class="overall-form-section">
                <div>
                    <div class="input-section">
                        <label>Username:</label>
                        <input class="username" type="text" name="username" value="{{user.username}}">
                    </div>

                    <div class="input-section">
                        <label>First Name:</label>
                        <input class="fName" type="text" name="fName" value="{{user.fName}}">
                    </div>
                </div>

                <div>
                    <div class="input-section">
                        <label>Last Name:</label>
                        <input class="lName" type="text" name="lName" value="{{user.lName}}">
                    </div>

                    <div class="input-section input-textarea">
                        <label>Description:</label>
                        <textarea class="description" name="description">{{user.description}}</textarea>
                    </div>
                </div>
            </div>


            <div class="btnSave-section">
                <button type="submit" class="btnSave">Save</button>
            </div>

        </form>

    </div>
</div>